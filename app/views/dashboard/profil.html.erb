<nav>
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <a class="nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Mon dressing</a>
    <a class="nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Mes réservations</a>
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="container-list">
      <div class="grid-product">
        <% @articles.each do |article| %>
          <%= link_to article_path(article), class: 'card' do %>
              <% if article.photos.attached? %>
                <%= cl_image_tag article.photos.first.key, height: 300, width: 400, crop: :fill %>
              <% else %>
                <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" class="card__image" alt="" />
              <% end %>
            <div class="card__overlay">
              <div class="card__header">
                <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>
                <div class="card__header-text">
                  <h2><%= article.name %></h2>
                </div>
              </div>
              <p><%= article.category %> <strong><%= article.price %></strong> €.</p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>


  <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
    <div class="container-list">
      <div class="grid-product">
        <% current_user.bookings.map(&:article).each do |article| %>
          <%= link_to article_path(article), class: 'card' do %>
              <% if article.photos.attached? %>
                <%= cl_image_tag article.photos.first.key, height: 300, width: 400, crop: :fill %>
              <% else %>
                <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" class="card__image" alt="" />
              <% end %>
            <div class="card__overlay">
              <div class="card__header">
                <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>
                <div class="card__header-text">
                  <h2><%= article.name %></h2>
                </div>
              </div>
              <p><%= article.category %> <strong><%= article.price %></strong> €.</p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
