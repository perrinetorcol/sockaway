<%# Navbar et searchbar ci-dessous :  %>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: 'navbar-brand' do %>
    <%= image_tag "sockaway.png", alt: "Logo Sock Away" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

<%# searchbar :  %>
  <nav class="navbar navbar-light">
    <div class="container-fluid">
      <%= form_tag articles_path, method: :get do %>
        <div class="d-flex">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control mr-2",
            placeholder: "Find some clothes"
          %>
          <%= submit_tag "Search", class: "btn btn-outline-success" %>
        </div>
      <% end %>
    </div>
  </nav>
<%# fin de la searchbar %>

  <div class=“collapse navbar-collapse” id=“navbarSupportedContent”>
    <ul class=“navbar-nav mr-auto”>
      <li class=“nav-item dropdown”>
        <div class=“avatar dropdown-toggle” id=“navbarDropdown” data-toggle=“dropdown” aria-haspopup=“true” aria-expanded=“false”> <i class=“fas fa-user”></i> </div>
          <div class=“dropdown-menu dropdown-menu-right” aria-labelledby=“navbarDropdown”>
            <a class=“dropdown-item” href=“/articles/new”>Ajouter un article</a>
            <a class=“dropdown-item” href=“#”>Messages</a>
            <a class=“dropdown-item” href=“#”>Se déconnecter</a>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>

<%# fin de la navbar et searchbar %>
