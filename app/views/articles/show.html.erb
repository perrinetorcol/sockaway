
<%# Grande div qui enveloppe carousel + description : %>
<div class="container-show">

  <div class="card-show">
    <%# Carousel photos %>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="d-block">
            <% if @article.photos.attached? %>
              <%= cl_image_tag @article.photos.first.key, height: 300, width: 500, crop: :fill %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1509067917181-3ec8d8ef5170?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTR8fGRyZXNzaW5nfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" class="d-block w-100" alt="Pas de photos pour cet article" />
            <% end %>
          </div>
        </div>
        <div class="carousel-item">
          <div class="d-block">
            <% if @article.photos.attached? && @article.photos.second %>
              <%= cl_image_tag @article.photos.second.key, height: 300, width: 500, crop: :fill %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1509067917181-3ec8d8ef5170?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTR8fGRyZXNzaW5nfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" class="d-block w-100" alt="Pas de photos pour cet article" />
            <% end %>
          </div>
        </div>
        <div class="carousel-item">
          <div class="d-block">
            <% if @article.photos.attached? && @article.photos.second %>
              <%= cl_image_tag @article.photos.third.key, height: 300, width: 500, crop: :fill %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1509067917181-3ec8d8ef5170?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTR8fGRyZXNzaW5nfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" class="d-block w-100" alt="Pas de photos pour cet article" />
            <% end %>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </button>
    </div>
    <%# Fin de Carousel photos %>
    <%# Description et prix de l'article ci-dessous : %>
    <div class="card-details-show">
      <div class="category-show">
        <h1><%= @article.category %></h1>
      </div>
      <div class="article-name-show">
        <h2> <%= @article.name %></h2>
      </div>
      <div class="description-show">
        <p><%= @article.description %></p>
      </div>
      <div class="prix-show">
        <p>
          <strong>Prix:</strong>
          <%= @article.price %> €
        </p>
      </div>
    </div>
    <%#  fin Description et prix de l'article ci-dessous : %>
  </div>
  <div class="card-link-show">
    <%= link_to 'Retour à la liste des articles', articles_path(@articles), class: "btn btn-gradient" %>
    <% unless current_user.id == @article.user_id %>
      <%= link_to 'Réserver cet article', article_bookings_path(@article), method: :post, class: "btn btn-gradient" %>
    <% end %>
    <% if policy(@article).destroy? %>
     <%= link_to 'Supprimer cet article', article_path(@article), class: "btn btn-gradient",
          method: :delete,
          data: { confirm: "êtes vous sûr(e) de vouloir supprimer cet article?" } %>
    <% end %>
  </div>
</div>
