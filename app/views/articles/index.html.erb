
<%# <h1>Articles</h1> %>
<div class="container">

  <% @articles.each do |article| %>
    <%= link_to article_path(article) do %>
      <div class="card-product text-center">
        <% if article.photos.attached? %>
          <%= cl_image_tag article.photos.first.key, height: 300, width: 400, crop: :fill %>
        <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />

        <% end %>
       <div class="card-product-infos">
          <h2><%= article.name %></h2>
          <p><%= article.category %> <strong><%= article.price %></strong> €.</p>
       </div>
     </div>

    <% end %>
  <% end %>
</div>
<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
  </div>
  <div class="footer-copyright">
    @2021 - Copyright - Tous droits réservés <br> Créé par Sock Away avec <i class="fas fa-heart"></i>
  </div>
</div>
